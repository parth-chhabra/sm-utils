{
  "name": "sm-utils",
  "version": "2.7.0",
  "description": "Uilities for NodeJS",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartprix/sm-utils"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "test": "npm run lint && npm run build && npm run test-only",
    "check-coverage": "true",
    "build": "babel src --out-dir dist",
    "lint": "eslint src",
    "test-only": "mocha --compilers js:babel-register test/*.test.js"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "chalk": "1.1.3",
    "chmodr": "1.0.2",
    "chownr": "1.0.1",
    "continuation-local-storage": "3.2.0",
    "etc-passwd": "0.1.1",
    "glob": "7.1.2",
    "lodash": "4.17.4",
    "lru-cache": "4.1.1",
    "mkdirp": "0.5.1",
    "request": "^2.81.0",
    "rimraf": "2.6.1",
    "socks5-http-client": "^1.0.2",
    "socks5-https-client": "^1.2.0",
    "source-map-support": "0.4.15",
    "stack-trace": "0.0.10",
    "thenify-all": "1.6.0",
    "tough-cookie-file-store": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "chai": "4.0.2",
    "eslint": "3.19.0",
    "eslint-config-smartprix": "3.1.6",
    "ghooks": "2.0.0",
    "isparta": "4.0.0",
    "mocha": "3.4.2"
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {}
  },
  "babel": {
    "presets": [
      "stage-0"
    ],
    "plugins": [
      [
        "transform-es2015-modules-commonjs",
        {
          "strictMode": false
        }
      ]
    ],
    "sourceMaps": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
