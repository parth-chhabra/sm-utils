{
  "name": "sm-utils",
  "version": "2.1.0",
  "description": "Uilities for NodeJS",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartprix/sm-utils"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "test": "npm run lint && npm run test-only",
    "check-coverage": "true",
    "build": "babel src --out-dir dist",
    "lint": "eslint src",
    "test-only": "mocha --compilers js:babel-register test/*.test.js"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "chalk": "1.1.3",
    "chmodr": "1.0.2",
    "chownr": "1.0.1",
    "continuation-local-storage": "3.2.0",
    "eslint": "3.12.1",
    "etc-passwd": "0.1.1",
    "glob": "7.1.1",
    "lodash": "4.17.2",
    "lru-cache": "4.0.2",
    "mkdirp": "0.5.1",
    "rimraf": "2.5.4",
    "source-map-support": "0.4.6",
    "stack-trace": "0.0.9",
    "thenify-all": "1.6.0"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-preset-stage-0": "6.16.0",
    "chai": "3.5.0",
    "eslint": "3.12.1",
    "eslint-config-smartprix": "3.1.4",
    "ghooks": "1.3.2",
    "isparta": "4.0.0",
    "mocha": "3.2.0"
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {}
  },
  "babel": {
    "presets": [
      "stage-0"
    ],
    "sourceMaps": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
