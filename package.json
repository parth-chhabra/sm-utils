{
  "name": "sm-utils",
  "version": "2.0.0",
  "description": "Uilities for NodeJS",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartprix/sm-utils"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node --presets stage-0",
    "test": "npm run lint && npm run test-only",
    "check-coverage": "true",
    "build": "babel src --out-dir dist",
    "lint": "eslint src",
    "test-only": "mocha --compilers js:babel-register test/*.test.js"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "chmodr": "1.0.2",
    "chownr": "1.0.1",
    "continuation-local-storage": "3.1.7",
    "eslint": "2.13.1",
    "etc-passwd": "0.1.1",
    "ghooks": "1.2.4",
    "glob": "7.0.5",
    "lodash": "4.13.1",
    "microtime": "2.1.1",
    "mkdirp": "0.5.1",
    "nodedump": "0.0.8",
    "rimraf": "2.5.2",
    "thenify-all": "1.6.0"
  },
  "devDependencies": {
    "babel-cli": "6.10.1",
    "babel-eslint": "6.1.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.9.0",
    "chai": "3.5.0",
    "eslint": "2.13.1",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-import": "1.9.2",
    "eslint-config-smartprix": "1.1.2",
    "ghooks": "1.2.4",
    "isparta": "4.0.0",
    "mocha": "2.5.3"
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {
    }
  },
  "babel": {
    "presets": [
      "stage-0"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
