{
  "name": "sm-utils",
  "version": "2.14.5",
  "description": "Uilities for NodeJS",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartprix/sm-utils"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "test": "npm run lint && npm run build && npm run test-only",
    "check-coverage": "true",
    "build": "rm -rf dist && babel src --out-dir dist",
    "docs": "rm -rf docs && jsdoc -c jsdoc.json",
    "types": "jsdoc -t node_modules/@otris/jsdoc-tsd -r ./src/",
    "lint": "eslint src",
    "test-only": "NODE_ENV=test mocha --slow 0 --exit --require @babel/register test/*.test.js",
    "-precommit": "npm run build && npm test && npm run check-coverage",
    "prepublishOnly": "npm run build"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "chalk": "2.4.1",
    "chmodr": "1.0.2",
    "chownr": "1.0.1",
    "etc-passwd": "0.1.1",
    "glob": "7.1.3",
    "ioredis": ">=4.0.0",
    "kue": "^0.11.6",
    "lodash": "4.17.10",
    "longjohn": "^0.2.12",
    "lru-cache": "4.1.3",
    "mkdirp": "0.5.1",
    "request": "^2.88.0",
    "rimraf": "2.6.2",
    "sm-socks5-http-client": "^1.0.4",
    "socks5-https-client": "^1.2.1",
    "source-map-support": "0.5.9",
    "stack-trace": "0.0.10",
    "thenify-all": "1.6.0",
    "timestring": ">=5.0.1",
    "tough-cookie-file-store": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@otris/jsdoc-tsd": "^1.0.3",
    "@types/node": "^10.9.3",
    "@types/request": "^2.47.1",
    "chai": "4.1.2",
    "docdash": "^1.0.0",
    "eslint": "5.4.0",
    "eslint-config-smartprix": "3.4.2",
    "ghooks": "2.0.4",
    "isparta": "4.1.0",
    "jsdoc": "^3.5.5",
    "mocha": "5.2.0"
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {
      "vue/script-indent": 0
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs",
          "shippedProposals": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "sourceMaps": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
