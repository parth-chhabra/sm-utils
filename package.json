{
  "name": "sm-utils",
  "version": "2.13.12",
  "description": "Uilities for NodeJS",
  "main": "dist/index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartprix/sm-utils"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "test": "npm run lint && npm run build && npm run test-only",
    "check-coverage": "true",
    "build": "babel src --out-dir dist",
    "lint": "eslint src",
    "test-only": "NODE_ENV=test mocha --slow 0 --exit --require @babel/register test/*.test.js",
    "-precommit": "npm run build && npm test && npm run check-coverage",
    "prepublishOnly": "npm run build"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "2.4.1",
    "chmodr": "1.0.2",
    "chownr": "1.0.1",
    "etc-passwd": "0.1.1",
    "glob": "7.1.2",
    "ioredis": ">= 3.2.2",
    "kue": "^0.11.6",
    "lodash": "4.17.10",
    "longjohn": "^0.2.12",
    "lru-cache": "4.1.2",
    "mkdirp": "0.5.1",
    "request": "^2.85.0",
    "rimraf": "2.6.2",
    "sm-socks5-http-client": "^1.0.4",
    "socks5-https-client": "^1.2.1",
    "source-map-support": "0.5.5",
    "stack-trace": "0.0.10",
    "thenify-all": "1.6.0",
    "timestring": ">= 5.0.0",
    "tough-cookie-file-store": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "chai": "4.1.2",
    "eslint": "4.19.1",
    "eslint-config-smartprix": "3.4.2",
    "ghooks": "2.0.4",
    "isparta": "4.0.0",
    "mocha": "5.1.1",
    "jsdoc": "^3.5.5"
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {
      "vue/script-indent": 0
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs",
          "shippedProposals": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "sourceMaps": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
