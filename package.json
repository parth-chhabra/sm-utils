{
  "name": "sm-utils",
  "version": "1.0.0",
  "description": "Uilities for NodeJS",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartprix/sm-utils"
  },
  "engines": {
    "node": "5.1.1"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node --presets es2015,stage-0",
    "check-coverage": "istanbul check-coverage --statements 50 --functions 50 --branches 50 --lines 50",
    "test": "babel-node ./node_modules/.bin/isparta cover -x *.test.js _mocha -- -R spec test/index.test.js",
    "build": "babel src --out-dir dist"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "6.3.14",
    "chmodr": "1.0.2",
    "chownr": "1.0.1",
    "etc-passwd": "0.1.1",
    "glob": "6.0.1",
    "lodash": "3.10.1",
    "mkdirp": "0.5.1",
    "rimraf": "2.4.4",
    "thenify-all": "1.6.0"
  },
  "devDependencies": {
    "babel-cli": "6.3.15",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "babel-register": "6.3.13",
    "chai": "3.4.1",
    "ghooks": "1.0.1",
    "isparta": "4.0.0",
    "mocha": "2.3.4",
    "nodemon": "1.8.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
